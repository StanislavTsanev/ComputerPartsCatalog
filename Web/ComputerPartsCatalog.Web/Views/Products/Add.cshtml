@model ComputerPartsCatalog.Web.ViewModels.Products.AddProductInputModel
@{
    this.ViewData["Title"] = "Add new product";
    var categories = this.Model.Categories.Select(x => new SelectListItem(x.Value, x.Key));
}

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <h1 class="text-white">@this.ViewData["Title"]</h1>
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="text-white" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-white" asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-white" asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-white" asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="custom-select" asp-items="categories">
            <option selected>Please select an option</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-white" asp-for="Images"></label>
        <input asp-for="Images" class="form-control" />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <div class="form-group" id="FeaturesContainer">
        <label class="text-white" asp-for="Features"></label>
        <a class="btn btn-success" onclick="AddMoreFeatures()">Add More</a>
    </div>

    <input type="submit" class="btn btn-info" />
</form>

@section Scripts {
    <script>
        var featureIndex = 0;
        function AddMoreFeatures() {
            $("#FeaturesContainer").append("<div class='form-control'> Name: <input type='text' name='Features["+featureIndex+"].Name' /> Type: <input type='text' name='Features["+featureIndex+"].Type' /></div>");
            featureIndex++;
        }
    </script>
}