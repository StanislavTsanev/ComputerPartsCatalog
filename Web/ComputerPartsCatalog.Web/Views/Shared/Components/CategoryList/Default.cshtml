@model ComputerPartsCatalog.Web.ViewModels.Categories.CategoriesListViewModel
@{
    this.ViewData["Title"] = "Default";
}

<div class="list-group">
    @foreach (var category in this.Model.Categories)
    {
        <a asp-controller="Products" asp-action="Category" asp-route-id="@category.Id" class="list-group-item list-group-item-action text-dark">@category.Name</a>
    }
</div>