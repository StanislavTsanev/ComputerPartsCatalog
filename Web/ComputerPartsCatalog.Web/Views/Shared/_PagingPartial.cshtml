@model PagingViewModel

<ul class="pagination justify-content-center">
    <li class="page-item alert-dark @if(!Model.HasPreviousPage){ <text>disabled</text> }">
        <a class="page-link" asp-action="All" asp-route-id="@Model.PreviousPageNumber"><i class="fas fa-long-arrow-alt-left"></i></a>
    </li>
    @for (int i = Model.PageNumber - 2; i < Model.PageNumber; i++)
    {
        if (i > 0)
        {
            <li class="page-item alert-dark">
                <a class="page-link" asp-action="All" asp-route-id="@i">@i</a>
            </li>
        }
    }
    <li class="page-item active">
        <a class="page-link bg-dark" asp-action="All" asp-route-id="@Model.PageNumber">@Model.PageNumber</a>
    </li>
    @for (int i = Model.PageNumber + 1; i < Model.PageNumber + 3; i++)
    {
        if (i <= Model.PagesCount)
        {
            <li class="page-item alert-dark">
                <a class="page-link" asp-action="All" asp-route-id="@i">@i</a>
            </li>
        }
    }
    <li class="page-item alert-dark @if(!Model.HasNextPage){ <text>disabled</text> }">
        <a class="page-link" asp-action="All" asp-route-id="@Model.NextPageNumber"><i class="fas fa-long-arrow-alt-right"></i></a>
    </li>
</ul>